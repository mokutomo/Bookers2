<div class="conrtainer">
	<div class="row">
		<div class="col-lg-3">
 			<%= render 'books/newbook',  book: @book, user: @user %>
 		</div>
		<div class="col-lg-9">
			<h1>Books</h1>
			<table class = "table tables-bordered">
				<thaed>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thaed>
				<tbody>
			 		<% @user.books.each do |book| %>
					<tr>
			 			<td><%= attachment_image_tag book.user, :image, :fill, 60,60,format: 'jpg', fallback: "noimage.png",:size => "60x60" %></td>
			 			<td><%= link_to book.title, book_path(book.id), class: "book_#{@book}" %></td>
			 			<td><%= book.body %></td>
			 		</tr>
			 		<% end %>
			 	</tbody>
			 </table>
		</div>

	</div> 
</div> 