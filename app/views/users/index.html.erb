<div class="conrtainer">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/newbook',  book: @book, user: current_user %>
		</div>

        <div class="col-lg-9">
        	<h1>Users</h1>
        	<table class = "table tables-bordered">
        		<thaed>
        			<tr>
						<th></th>
						<th>image</th>
						<th>name</th>
					</tr>
				</thaed>
				<tbody>
			      <% @users.each do |user| %>
			      <tr>
			      	<td><%= attachment_image_tag user, :image, :fill, 100,100,format: 'jpg', fallback: "noimage.png",:size => "60x60" %></td>
			      	<td><%= user.name %></td>
			    <td><%= link_to "Show", user_path(user.id), class: "user_#{user.id}" %></td>
			</tr>
			 <% end %>
			</tbody>
		</table>
	</div>
</div>
</div>


