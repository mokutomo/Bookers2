<%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
<% end %>


<div class="conrtainer">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/newbook',  book: @book, user: @user %>
		</div>

		<div class="col-lg-9">
			<h1>Books</h1>
			<table class = "table tables-bordered">
				<thaed>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thaed>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= link_to user_path(book.user_id), class: "user_#{book.user_id}" do %>  <%= attachment_image_tag book.user, :image, :fill, 100,100,format: 'jpg', fallback: "noimage.png",:size => "60x60"  %>
							<% end %></td>
						<td><%=link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>







