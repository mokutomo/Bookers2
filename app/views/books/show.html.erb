<div class="conrtainer">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/newbook',  book: @books, user: @book.user %>
		</div>
		<div class="col-lg-9">
			<h2>Book detail</h2>
			<p><%= flash[:a] %></p>
			<table class = "table tables-bordered">
				<thaed></thaed>
				<tbody >
					<tr>
						<td>
							<%= link_to user_path(@book.user_id), class: "user_#{@book.user_id}" do %>
							<%= attachment_image_tag @book.user, :image, :fill, 100, 100, format: 'jpg', fallback: "noimage.png", :size => "60x60" %>
							<br><%= @book.user.name  %>
							<% end %>
							</td>
						<td><%= link_to  @book.title , book_path(@book), class: "book_#{@book}" %></td>
						<td><%= @book.body %></td>

						<%if @book.user == current_user%>

						<td><%= link_to "Edit", edit_book_path(@book), class: "edit_book_#{@book}", class: "btn btn-success" %>
						</td>
						<td><%= link_to "Destroy", book_path(@book), class: "destroy_book_#{@book}",method: :delete,class: "btn btn-danger" %></td>
						<%end%>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>

