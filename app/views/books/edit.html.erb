<%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>

<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>
    <h4>Opinion</h4>
    <%= f.text_area :body, class: "book_body" %>
    <%= f.submit 'Update Book' %>
    <%= link_to "show", book_path(@book), class: "book_#{@book}" %>|
<%= link_to "Back", books_path(@book),class: "back"  %>
<% end %>
<% end %>